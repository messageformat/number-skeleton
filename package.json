{
  "name": "messageformat-number-skeleton",
  "version": "0.0.1",
  "description": "A parser & formatter for ICU NumberFormatter skeleton strings",
  "keywords": [
    "icu",
    "messageformat",
    "numberformatter",
    "skeleton",
    "parser",
    "formatter"
  ],
  "author": "Eemeli Aro <eemeli@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/messageformat/number-skeleton",
  "repository": "messageformat/number-skeleton",
  "files": [
    "lib/"
  ],
  "main": "lib/index",
  "scripts": {
    "build:cjs": "tsc",
    "build:esm": "tsc -d -m ES6",
    "postbuild:esm": "for f in lib/*.js; do mv \"$f\" \"${f%.js}.mjs\"; done",
    "build": "npm run build:esm && npm run build:cjs",
    "predocs": "npm run build",
    "docs": "api-extractor run --local --verbose",
    "postdocs": "api-documenter markdown -i temp/ -o docs/",
    "clean": "git clean -fdxe node_modules",
    "prettier": "prettier --write skeleton.d.ts src/*",
    "test": "jest"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ],
      "@babel/preset-typescript"
    ]
  },
  "jest": {
    "collectCoverage": true
  },
  "devDependencies": {
    "@babel/core": "^7.7.2",
    "@babel/preset-env": "^7.7.1",
    "@babel/preset-typescript": "^7.7.2",
    "@microsoft/api-documenter": "^7.5.8",
    "@microsoft/api-extractor": "^7.5.6",
    "@types/jest": "^24.0.23",
    "babel-jest": "^24.9.0",
    "jest": "^24.9.0",
    "prettier": "^1.19.1",
    "typescript": "^3.7.2"
  }
}
